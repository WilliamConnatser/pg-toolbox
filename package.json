{
  "name": "pg-toolbox",
  "version": "1.1.34",
  "description": "A package containing CLI scripts to manage a Postgres database including scripts to execute migrations, rollback migrations, seed or truncating a Postgres database.",
  "main": "dist/exports.js",
  "scripts": {
    "dev": "npx babel src --watch --out-dir dist",
    "test": "mocha --timeout 30000",
    "clean": "rimraf dist",
    "build": "npm run clean && npx babel src --out-dir dist",
    "prettier": "prettier 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "tslint": "tslint 'src/**/*.ts'",
    "tslint:fix": "tslint --fix 'src/**/*.ts'",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "bin": {
    "pg-toolbox": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WilliamConnatser/pg-toolbox.git"
  },
  "keywords": [
    "pg",
    "postgres",
    "helpers",
    "migrate",
    "rollback",
    "seed"
  ],
  "author": "William E Connatser III",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/WilliamConnatser/pg-toolbox/issues"
  },
  "homepage": "https://github.com/WilliamConnatser/pg-toolbox#readme",
  "dependencies": {
    "arg": "^5.0.0"
  },
  "peerDependencies": {
    "slonik": "^24.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-modules-commonjs": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.13.16",
    "@types/node": "^16.11.6",
    "chai": "^4.3.4",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "mocha": "^8.4.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.4"
  }
}
